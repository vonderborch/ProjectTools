<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="ProjectTools.Views.PrepareTemplateView"
             xmlns:vm="clr-namespace:ProjectTools.ViewModels"
             xmlns:viewModels="clr-namespace:ProjectTools.ViewModels"
             mc:Ignorable="d" d:DesignWidth="630" d:DesignHeight="440"
             x:DataType="vm:PrepareTemplateViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewModels:PrepareTemplateViewModel />
    </Design.DataContext>
    
    <StackPanel Width="630" Height="440">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Project Directory: " />
            <TextBox Name="DirectoryText" Text="{Binding Directory}" />
            <Button Click="FindTemplateProjectHandler">Find Project...</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Template Output Directory: " />
            <TextBox Name="OutputDirectoryText" Text="{Binding OutputDirectory}" />
            <Button Click="SaveFileLocationHandler">Set Output...</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Skip Cleaning: " />
            <CheckBox IsChecked="{Binding SkipCleaning}" />
            <TextBlock Text="What If: " />
            <CheckBox IsChecked="{Binding WhatIf}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <ListBox Name="TemplateSettingsList" Height="200" />
            <StackPanel Name="SelectedItemSettings" Orientation="Vertical">
                
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="GenerateTemplateHandler">Generate</Button>
            <Button Click="ResetHandler">Reset</Button>
        </StackPanel>
        <TextBlock Name="OutputText" Text="{Binding Output}" />
    </StackPanel>
    
</UserControl>