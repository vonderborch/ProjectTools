<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Velentr.INDIVIDUAL_SUPPORT.Shared.TestApp</AssemblyName>
        <RootNamespace>Velentr.INDIVIDUAL_SUPPORT.Shared.TestApp</RootNamespace>
        <LangVersion>default</LangVersion>
        <Configurations>Release;Debug;Release-ARM64;Debug-ARM64</Configurations>
        <Platforms>x64;ARM64;AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|x64' ">
      <DefineConstants>TRACE;FNA</DefineConstants>
      <OutputPath>..\..\..\debug\tests\manual\fna\</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|x64' ">
      <DefineConstants>TRACE;FNA</DefineConstants>
      <OutputPath>..\..\..\release\tests\manual\fna\</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release-ARM64' ">
      <Optimize Condition=" '$(Optimize)' == '' ">true</Optimize>
      <DefineConstants>TRACE;FNA</DefineConstants>
      <OutputPath>../../../release-arm64/tests/manual/fna/net9.0/</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DefineConstants>TRACE;FNA</DefineConstants>
      <OutputPath>../../../debug/tests/manual/fna/net9.0/</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug-ARM64' ">
      <DefineConstants>TRACE;FNA</DefineConstants>
      <OutputPath>../../../debug-arm64/tests/manual/fna/net9.0/</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DefineConstants>TRACE;FNA</DefineConstants>
      <OutputPath>../../../release/tests/manual/fna/net9.0/</OutputPath>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\..\source\Velentr.INDIVIDUAL_SUPPORT.FNA\Velentr.INDIVIDUAL_SUPPORT.FNA.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\..\..\.fna\fnalibs\**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <Import Project="..\Velentr.INDIVIDUAL_SUPPORT.Shared.TestApp\Velentr.INDIVIDUAL_SUPPORT.Shared.TestApp.projitems" Label="Shared" />

</Project>
